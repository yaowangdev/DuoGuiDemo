<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/agmobile_blue"
        android:padding="5dp">
        <ImageView
            android:id="@+id/iv_mark_return"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/common_ic_back"/>

        <!--标题-->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="选择点样式"
            android:layout_centerInParent="true"
            android:textColor="@color/agmobile_white"
            android:textSize="16sp"/>


        <ImageView
            android:id="@+id/iv_mark_closeaddmark"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="16dp"
            android:src="@mipmap/common_ic_close_white"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.appdev.duoguidemo.ui.GridViewForScrollview
            android:id="@+id/gridview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="5"
            android:horizontalSpacing="6dp"/>
    </ScrollView>

</LinearLayout>